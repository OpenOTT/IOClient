<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp">

    <FrameLayout
        android:id="@+id/pin_num_background"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        >
        <TextView
            style="@style/PinNumberText"
            android:id="@+id/pin_num_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="88"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/pin_num_background"
        >
        <TextView
            android:id="@+id/pin_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="LABEL"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/pin_label_text">
            <Spinner
                android:id="@+id/pin_mode_spinner"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
            <Switch
                android:id="@+id/ping_state_toggle"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textOff="@string/state_low"
                android:textOn="@string/state_high"
                android:visibility="visible"
                android:layout_toLeftOf="@+id/pin_mode_spinner"/>
            <TextView
                android:id="@+id/pin_value_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="VALUE"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/pin_mode_spinner"/>
            <Spinner
                android:id="@+id/pin_alt_mode_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/pin_mode_spinner"/>
            <SeekBar
                android:id="@+id/pin_pwm_seekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/pin_mode_spinner"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>